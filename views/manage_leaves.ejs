            const tableBody = document.getElementById('leavesTableBody');
            const rows = tableBody.getElementsByTagName('tr');

            for (let i = 0; i < rows.length; i++) {
                const row = rows[i];
                const leaveId = row.cells[0].textContent.toLowerCase();
                const patientName = row.cells[1].textContent.toLowerCase();
                const status = row.cells[7].textContent.trim();
                
                let showRow = true;

                // Search filter
                if (searchInput && !leaveId.includes(searchInput) && !patientName.includes(searchInput)) {
                    showRow = false;
                }

                // Status filter
                if (statusFilter && !status.includes(statusFilter)) {
                    showRow = false;
                }

                row.style.display = showRow ? '' : 'none';
            }
        }

        function viewLeave(leaveId) {
            alert('عرض تفاصيل الإجازة: ' + leaveId);
        }

        function editLeave(leaveId) {
            alert('تعديل الإجازة: ' + leaveId);
        }

        let leaveToDelete = null;

        function deleteLeave(leaveId) {
            leaveToDelete = leaveId;
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        document.getElementById('confirmDelete').addEventListener('click', function() {
            if (leaveToDelete) {
                // Find and remove the row
                const tableBody = document.getElementById('leavesTableBody');
                const rows = tableBody.getElementsByTagName('tr');
                
                for (let i = 0; i < rows.length; i++) {
                    if (rows[i].cells[0].textContent.includes(leaveToDelete)) {
                        rows[i].remove();
                        break;
                    }
                }
                
                // Close modal
                const deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
                deleteModal.hide();
                
                // Show success message
                alert('تم حذف الإجازة بنجاح');
                
                leaveToDelete = null;
            }
        });

        // Real-time search
        document.getElementById('searchInput').addEventListener('input', searchLeaves);
        document.getElementById('statusFilter').addEventListener('change', searchLeaves);
        document.getElementById('dateFilter').addEventListener('change', searchLeaves);
    </script>
</body>
