        .floating-nav-header {
            text-align: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid rgba(26, 95, 122, 0.1);
        }

        .floating-nav-header h5 {
            margin: 0;
            font-weight: 700;
            color: var(--primary-color);
            font-size: 1.2rem;
        }

        .floating-nav-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .floating-nav-menu .menu-section {
            padding: 10px 0;
            font-size: 0.9rem;
            color: var(--text-muted);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 1px solid rgba(26, 95, 122, 0.1);
            margin-bottom: 10px;
        }

        .floating-nav-menu .menu-item {
            display: block;
            padding: 12px 15px;
            color: var(--text-dark);
            text-decoration: none;
            transition: var(--transition);
            border-radius: var(--border-radius);
            margin: 5px 0;
            position: relative;
            overflow: hidden;
        }

        .floating-nav-menu .menu-item::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 0;
            height: 100%;
            background: var(--gradient-primary);
            transition: var(--transition);
            z-index: -1;
            border-radius: var(--border-radius);
        }

        .floating-nav-menu .menu-item:hover::before {
            width: 100%;
        }

        .floating-nav-menu .menu-item:hover {
            color: var(--text-white);
            transform: translateX(-5px);
            box-shadow: var(--shadow-medium);
        }

        .floating-nav-menu .menu-item.active {
            background: var(--gradient-primary);
            color: var(--text-white);
